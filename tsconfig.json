{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "node_modules"
  ]
}